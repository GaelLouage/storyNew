@{
   
}

@model UserEntity


<div class="contact-us pt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div id="map">
                    <h2 class="pt-3">Create Account</h2>
                    <h6 class="lead font-italic" style="color:gray;font-size: 15px;" class="lead">It's free and hardly takes more than 30 seconds.</h6>
                </div>
            </div>
            <div class="col-lg-12">
                <form asp-action="ValidateRegister" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-12 mt-5">
                            <fieldset>
                                <input asp-for="UserName" type="text" class="form-control" placeholder="UserName" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </fieldset>
                        </div>

                        <div class="col-lg-12  mt-5">
                            <fieldset>
                                <input asp-for="FirstName" type="text" class="form-control" placeholder="FirstName" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12 mt-5">
                            <fieldset>
                                <input asp-for="LastName" type="text" class="form-control" placeholder="LastName" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12 mt-5">
                            <fieldset>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12 mt-5">
                            <fieldset>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12 mt-5">
                            <fieldset>
                                <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" required="required">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <button type="submit" id="form-submit" class="main-dark-button w-100 mt-5"><i class="fa fa-paper-plane"></i></button>
                            </fieldset>
                        </div>

                    </div>
                </form>
                <div class="text-center">Already have an account? <a asp-action="Login">Login here</a>.</div>
            </div>
        </div>
    </div>
</div>