<br />
<div class="contact-us pt-5 mb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div id="map">
                    <h2 class="pt-3">Enter E-mail address</h2>
                    <h6 class="lead font-italic" style="color:gray;font-size: 15px;">A link to reset your password will be send to your e-mail address.</h6>
                </div>
            </div>
            <div class="col-lg-12">
                <form asp-action="ForgotPassword" method="post">
                    <div class="row">
                        <div class="col-lg-12 mt-5">
                            <fieldset>
                                <input name="email" type="email" class="form-control" placeholder="enter E-mail" />
                                <span class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <button type="submit" id="form-submit" class="main-dark-button w-100 mt-5"><i class="fa fa-paper-plane"></i></button>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>