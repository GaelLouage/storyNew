*@
@{
    var errorLogin = ViewData["ErrorMessage"] as string;
}
@model UserEntity


<div class="contact-us pt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div id="map">
                    <h2 class="pt-3">Log in</h2>
                    <h6 class="lead font-italic" style="color:gray;font-size: 15px;">We hope you have a great time reading and discovering new stories on our platform!</h6>
                </div>
            </div>
            <div class="col-lg-12">
                <form asp-action="ValidateLogin" method="post">
                    <div class="row">
                        <div class="col-lg-12 mt-5">
                            <fieldset>
                                <input asp-for="UserName" type="text" class="form-control" placeholder="UserName" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12 mt-5">
                            <fieldset>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <button type="submit" id="form-submit" class="main-dark-button w-100 mt-5"><i class="fa fa-paper-plane"></i></button>
                            </fieldset>
                        </div>
                            <div class="col-lg-12">
                            <fieldset>
                                <a asp-action="ForgotPassword">forgot password?</a>
                            </fieldset>
                        </div>
                    </div>
                      @if (!string.IsNullOrEmpty(errorLogin))
                     {
                    <div class="alert alert-danger" id="alert" role="alert">
                        @errorLogin 
                    </div>
                }
                </form>
            
            </div>
        </div>
    </div>
</div>