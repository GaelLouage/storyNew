@using Infrastructuur.EnumsAndStaticProps
@model Infrastructuur.Models.StoryzonEntity

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center m-3">@Model.Title</h1>


<br />
<div class="row justify-content-center mt-5">
</div>


  <div class="contact-us">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div id="map">
                      Add story
                    </div>
                </div>
                <div class="col-lg-12">
                      <form asp-action="Create" enctype="multipart/form-data">
                        <div class="row">
                          <div class="col-lg-12">
                            <fieldset>
                           <input asp-for="Title" class="form-control" placeholder="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                            </fieldset>
                          </div>
                          <div class="col-lg-12">
                            <fieldset>
                                <textarea asp-for="BodyFr" class="form-control" placeholder="Write French text here..."></textarea>
                <span asp-validation-for="BodyFr" class="text-danger"></span>
                            </fieldset>
                          </div>
                          <div class="col-lg-12">
                            <fieldset>
                                   <textarea asp-for="BodyNl" class="form-control" placeholder="Write Dutch text here..."></textarea>
                <span asp-validation-for="BodyNl" class="text-danger"></span>
                            </fieldset>
                          </div>
                              <div class="col-lg-12">
                            <fieldset>
                                         <textarea asp-for="BodyEn" class="form-control" placeholder="Write English text here..."></textarea>
                <span asp-validation-for="BodyEn" class="text-danger"></span>
                            </fieldset>
                          </div>
                              <div class="col-lg-12">
                            <fieldset>
                                 <select asp-for="Genre" class="form-control">
                    <option value=@Genre.Adventure>@Genre.Adventure</option>
                    <option value=@Genre.Action>@Genre.Action</option>
                    <option value=@Genre.Horror>@Genre.Horror</option>
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
                            </fieldset>
                          </div>
                              <div class="col-lg-12">
                            <fieldset>
                                   <input asp-for="Image" type="file" name="fileImage" class="form-control mt-5" placeholder="Select image" />
                <span asp-validation-for="Image" class="text-danger"></span>
                            </fieldset>
                          </div>
                          <div class="col-lg-12">
                            <fieldset>
                              <button type="submit" id="form-submit" class="main-dark-button w-100 mt-5"><i class="fa fa-paper-plane"></i></button>
                              </fieldset>
                          </div>
                            <div class="col-lg-12">
                            <fieldset>
                              <a class="btn main-dark-button w-100 mt-5" id="form-submit" class="btn main-dark-button" asp-action="Index">Go back</a>
                              </fieldset>
                          </div>
                        </div>
                      </form>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

